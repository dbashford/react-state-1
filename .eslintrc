{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,

    // Disable until Flow supports let and const
    "no-var": 0,
    "vars-on-top": 0,
    "comma-dangle": 0,

    // Need capitalized decorators
    "new-cap": 0,
    "babel/new-cap": 1,
  },
  "plugins": [
    "react",
    "babel"
  ]
}